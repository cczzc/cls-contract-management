<%@page import="UserSystem.Contract"%>

<%@page import="org.apache.jasper.tagplugins.jstl.core.Out"%>

<%@page import="Check.Judge"%>
<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>Insert title here</title>
<style>
#header {
    color:white;
    text-align:center;
    padding:0px;
}
</style>
</head>
<body>
<jsp:useBean id="fc" class="Check.FormatCheck" scope="page" />
<jsp:useBean id="w" class="UserSystem.Write" scope="page" />
<%
request.setCharacterEncoding("UTF-8");
    Judge jd = Judge.getJudge();
    jd.setIsallot(false);jd.setIsdraft(false);jd.setIsjoin(false);jd.setIsapprove(false);jd.setIssign(false);jd.setIsunfinished(false);
    if(jd.getIsnew()&&fc.newCheck((String)request.getParameter("NewContractName"), (String)request.getParameter("NewClinetName"), (String)request.getParameter("NewStartTime"), (String)request.getParameter("NewEndTime"), (String)request.getParameter("NewContractContent"))){
    	
    	jd.setIsnew(false);
    	Contract c = Contract.getContract();
    	c.emptyContract();
        c.setTitle((String)request.getParameter("NewContractName"));
        c.setClient((String)request.getParameter("NewClinetName"));        
        java.text.SimpleDateFormat formatter = new java.text.SimpleDateFormat("yyyy-MM-dd");   	 
    	java.util.Date currentTime = new java.util.Date();	 
    	String str_date1 = formatter.format(currentTime);
    	String str_date2 = currentTime.toString();        
        c.setMadename(str_date2);
        c.setStartname((String)request.getParameter("NewStartTime"));
        c.setEndtime((String)request.getParameter("NewEndTime"));
        c.setContent((String)request.getParameter("NewContractContent"));
        w.saveNew(c);
        
    	response.sendRedirect("Commit.jsp");
    }
    else{
    	if(jd.getIsnew()) {
            out.print("<script language='javaScript'> alert('填写内容有误！');</script>");
    	}
    	jd.setIsnew(true);
    }    
%> 
<div id="header">
<h3 style="margin-left:-260px">起草合同</h3>
</div>
<div>
</div>
<br>
<form action="NewContract.jsp" method="post">
<p style="color:white">
合同名称 ：<input type="text" name="NewContractName" style="width:300px;height:20px">
</p>
<p style="color:white">
客户 &nbsp;&nbsp;&nbsp;&nbsp;：<input type="text" name="NewClinetName" style="width:300px;height:20px">
</p>
<p style="color:white">
起始时间 ：<input type="text" name="NewStartTime" style="width:300px;height:20px">
</p>
<p style="color:white">
结束时间 ：<input type="text" name="NewEndTime" style="width:300px;height:20px">
</p>
<p style="color:white">
合同内容 ：
</p>
<p style="margin-left:87px">
<textarea name="NewContractContent" style="width:829px;height:300px;resize:none;outline:none" ></textarea>
</p>
<input type="submit" value="提交" style="width:60px;height:24px;font-size:14px;border:0px">&nbsp;</form>
<br>
<div style="float:left">
<div style="float:left"><form action="Save.jsp" method="post"><input type="submit" value="保存" style="width:60px;height:24px;font-size:14px;border:0px">&nbsp;</form></div>
<div style="float:left"><form action="Welcome.jsp" method="post"><input type="submit" value="取消" style="width:60px;height:24px;font-size:14px;border:0px">&nbsp;</form></div>
</div>
</body>
</html>
